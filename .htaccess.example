# Ativar mod_rewrite
RewriteEngine On

# 1Ô∏è‚É£ For√ßar HTTPS
RewriteCond %{HTTPS} !=on
RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [R=301,L]

# 2Ô∏è‚É£ Redirecionar WWW para n√£o-WWW (ou vice-versa)
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# 3Ô∏è‚É£ Remover ".php" da URL
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php [L,QSA]

# 4Ô∏è‚É£ P√°gina de erro personalizada
ErrorDocument 404 /views/_errors/404.php

# 5Ô∏è‚É£ Bloquear acesso a arquivos sens√≠veis
<FilesMatch "(\.env|\.htaccess|config\.php|composer\.(json|lock))">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# 6Ô∏è‚É£ Ativar Cache para Melhorar Velocidade
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# 7Ô∏è‚É£ Habilitar Compress√£o GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript
</IfModule>

# 8Ô∏è‚É£ Proteger Diret√≥rio com Senha (Opcional)
<Files "admin">
    AuthType Basic
    AuthName "√Årea Restrita"
    AuthUserFile /caminho/do/.htpasswd
    Require valid-user
</Files>

# 9Ô∏è‚É£ Prevenir Hotlinking (roubo de imagens)
<IfModule mod_rewrite.c>
    RewriteCond %{HTTP_REFERER} !^$
    RewriteCond %{HTTP_REFERER} !^https://(www\.)?seusite\.com [NC]
    RewriteRule \.(jpg|jpeg|png|gif|webp)$ - [F]
</IfModule>

# üîü Impedir Listagem de Diret√≥rios
Options -Indexes
